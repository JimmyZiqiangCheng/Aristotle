  <script>
    
    // create a new account go here...
    // select the create account element
    $(document).ready(function() {
      $("#create-account-btn").click(function() {
        const firstname = $("#input_firstname").val();
        const lastname = $("#input_lastname").val();
        const id = $("#input_id").val();
        const typeId = $("#input_type").val();
        const dptId = $("#input_dpt").val();
        const roleId = $("#input_role").val();
        const email = $("#input_email").val();
        const phone = $("#input_phone").val();
        const password = $("#input_password").val();
        $.post("./register", {
          dptId: dptId,
          rId: roleId,
          tId: typeId,
          username: id,
          password: password,
          firstname: firstname,
          lastname: lastname,
          email: email,
          phone: phone
        }, function(result){
          if(result) {
            if(result.message === 'OK'){
              $("#saveAccountModal").modal();
            }
          }
        });
      });
    });
